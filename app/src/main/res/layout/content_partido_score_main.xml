<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.nahuelsg.teniscriolloscore.PartidoScoreActivity"
    tools:showIn="@layout/activity_partido_score">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jugador1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jugador 1 "/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icn_tennis_ball"/>

        <TextView
            android:id="@+id/score_jugador1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="13"/>

        <TextView
            android:id="@+id/score_jugador2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icn_tennis_ball"/>

        <TextView
            android:id="@+id/jugador2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jugador 2 "/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:text="Al saque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton_saque_jugador1"
            android:layout_weight="1"
            android:textOff="Al saque"
            android:textOn="Al saque"
            style="#android/buttonToggleStyle"
            android:checked="false" />

        <ToggleButton
            android:text="Al saque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton_saque_jugador2"
            android:layout_weight="1"
            android:textOff="Al saque"
            android:textOn="Al saque" />
    </LinearLayout>

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/.1er.saque"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/content_partido_score_detalles" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/.2do.saque"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/content_partido_score_detalles"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/en_juego"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/content_partido_score_enjuego"
                        android:visibility="visible" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


</LinearLayout>