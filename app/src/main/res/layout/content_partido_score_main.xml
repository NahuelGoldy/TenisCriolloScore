<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.nahuelsg.teniscriolloscore.PartidoScoreActivity"
    tools:showIn="@layout/activity_partido_score">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jugador1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jugador 1 "
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="20dp"
            app:srcCompat="@drawable/icn_tennis_ball"
            android:id="@+id/icono_pelota_saque1"
            android:adjustViewBounds="true"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/score_jugador1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="13"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:gravity="center_vertical"
            android:background="@android:color/holo_orange_light" />

        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:background="@android:color/holo_orange_light"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/score_jugador2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="16"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:gravity="center_vertical"
            android:background="@android:color/holo_orange_light" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/icn_tennis_ball"
            android:id="@+id/icono_pelota_saque2"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:cropToPadding="false" />

        <TextView
            android:id="@+id/jugador2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jugador 2 "
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:text="Al saque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton_saque_jugador1"
            android:layout_weight="1"
            android:textOff="Al saque"
            android:textOn="Al saque"
            android:checked="false" />

        <ToggleButton
            android:text="Al saque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton_saque_jugador2"
            android:layout_weight="1"
            android:textOff="Al saque"
            android:textOn="Al saque" />
    </LinearLayout>

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/.1er.saque"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/content_partido_score_detalles" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/.2do.saque"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/content_partido_score_detalles"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/en_juego"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/content_partido_score_enjuego"
                        android:visibility="visible" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


</LinearLayout>