<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dev.nahuelsg.teniscriolloscore.MainActivity"
    tools:showIn="@layout/content_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="1"
        android:layout_marginTop="5dp">

        <Button
            android:text="nuevo partido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_nuevo_partido"
            android:layout_weight="0.49"
            android:backgroundTint="#FF0027FF"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold" />

        <Button
            android:text="otra cosa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_otracosa"
            android:layout_weight="0.49" />

    </LinearLayout>

    <TextView
        android:text="ULTIMOS PARTIDOS REGISTRADOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTituloUltimosPartidos"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="#FF0027FF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold" />

    <ListView
        android:id="@+id/listView_resultados_anteriores"
        android:layout_width="match_parent"
        android:layout_height="590dp" />

</LinearLayout>